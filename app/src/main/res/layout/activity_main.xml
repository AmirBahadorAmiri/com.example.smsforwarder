<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        app:title="@string/app_name"
        android:elevation="2dp"
        app:titleTextColor="@color/white"
        android:background="@color/teal"
        android:id="@+id/appToolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settingIcon"
        android:elevation="2dp"
        app:tint="@color/white"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/round_settings_24"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:background="@drawable/ripple_color"
        app:layout_constraintTop_toTopOf="@id/appToolBar"
        app:layout_constraintBottom_toBottomOf="@id/appToolBar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appToolBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="invisible"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/dont_save_numbers"
        android:text="هیچ شماره ای وارد نشده است"
        app:layout_constraintTop_toBottomOf="@id/appToolBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:pointerIcon="hand"
        android:src="@drawable/round_add_24"
        app:backgroundTint="@color/teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>